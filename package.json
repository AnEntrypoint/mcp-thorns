{
  "name": "mcp-thorns",
  "version": "3.0.0",
  "description": "Location-based codebase analysis - find everything by file:line:name, complete import/export flow, zero stats",
  "type": "module",
  "main": "./lib.js",
  "exports": {
    ".": "./lib.js"
  },
  "bin": {
    "thorns": "./index.js"
  },
  "files": [
    "index.js",
    "lib.js",
    "analyzer.js",
    "compact-formatter.js",
    "dependency-analyzer.js",
    "advanced-metrics.js",
    "ignore-parser.js",
    ".thornsignore",
    "queries.js",
    "README.md"
  ],
  "scripts": {
    "analyze": "node index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AnEntrypoint/mcp-thorns.git"
  },
  "author": "AnEntrypoint",
  "license": "MIT",
  "homepage": "https://github.com/AnEntrypoint/mcp-thorns#readme",
  "bugs": {
    "url": "https://github.com/AnEntrypoint/mcp-thorns/issues"
  },
  "dependencies": {
    "tree-sitter": "^0.21.1",
    "tree-sitter-javascript": "^0.21.0",
    "tree-sitter-typescript": "^0.21.0",
    "tree-sitter-python": "^0.21.0",
    "tree-sitter-rust": "^0.21.0",
    "tree-sitter-go": "^0.21.0",
    "tree-sitter-c": "^0.21.0",
    "tree-sitter-cpp": "^0.22.0",
    "tree-sitter-java": "^0.21.0",
    "tree-sitter-c-sharp": "^0.21.0",
    "tree-sitter-ruby": "^0.21.0",
    "tree-sitter-php": "^0.22.0",
    "tree-sitter-json": "^0.21.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "tree-sitter",
    "analysis",
    "ast",
    "codebase"
  ]
}
